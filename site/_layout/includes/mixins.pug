mixin bookPageLink(bookPage)
    a.bookRef(href=bookPage.getLink())
        .type(class='type--' + bookPage.type.className)
            span= bookPage.type.letter
        .info
            .title= bookPage.title
            
            if (bookPage.desc)
                .desc!= bookPage.desc

