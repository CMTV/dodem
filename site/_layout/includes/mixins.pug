mixin preloadFont(fontPath)
    link(
        rel="preload",
        href=`/site/fonts/${fontPath}`,
        as="font",
        type="font/ttf",
        crossorigin="anonymous"
    )

mixin style(stylePath)
    link(
        rel="stylesheet"
        href=`/site/styles/${stylePath}`
    )

mixin script(scriptPath)
    script(src=`/site/scripts/${scriptPath}`)

