mixin pageTitle(icon, title)
    .pageTitle
        if icon != null
            i(class=icon)
        h2 !{title}

mixin bookRefs(refs, type)
    -
        let single = (refs.length === 1);
        let article = (single ? 'статье' : 'статьях');
        let text = '';

        switch (type)
        {
            case 'tasks':
                text = `Вся необходимая теория для решения этих задач понятно и подробно расписана в ${article}:`;
                break;
            case 'task':
                text = `Вся необходимая теория для решения этой задачи понятно и подробно расписана в ${article}:`;
                break;
            case 'protoTask':
                text = `Эта прото-задача является отрывком теории, которая понятно и подробно расписана в ${article}:`;
                break;
        }

    .contentBlock.bookRefs(class=`type--${type}`)
        .body
            .content
                i.fas.fa-book
                .inner
                    p=text
                    ul
                        each ref in refs
                            li
                                a(href=`https://omath.ru/${ref.url}`, target="_blank")= ref.title
mixin contentBlock
    .contentBlock
        block

mixin avatar(src, link)
    .avatarContainer(href=link)

        if (link)
            a(href=link)
                img.avatar(src=(src ? src : '/site/graphics/defaultAvatar.svg'))

        else
            div
                img.avatar(src=(src ? src : '/site/graphics/defaultAvatar.svg'))

